<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar">

    <LinearLayout
        android:id="@+id/ll_user_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#000000">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@mipmap/steam2"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="华莱士"
            android:textColor="#fcfdfcfc"
            android:textSize="40dp"
            android:gravity="left|center_vertical"/>

        <ImageView
            android:id="@+id/im_user_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/up"
            android:layout_marginLeft="120dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/user_notice_linearlayout">
            <TextView
                style="@style/user_notice_style"
                android:id="@+id/tv_User_noticeNumber"
                android:text="0"
                android:layout_marginTop="@dimen/user_letter_margintop"/>
            <TextView
                style="@style/user_notice_style"
                android:text="关注" />
        </LinearLayout>

        <ImageView
            style="@style/user_notice_image"/>

        <LinearLayout
            style="@style/user_notice_linearlayout">
            <TextView
                android:id="@+id/tv_User_fanNumber"
               style="@style/user_notice_style"
                android:text="0"
                android:layout_marginTop="@dimen/user_letter_margintop"/>
            <TextView
                style="@style/user_notice_style"
                android:text="粉丝"/>
        </LinearLayout>

        <ImageView
        style="@style/user_notice_image"/>

        <LinearLayout
            style="@style/user_notice_linearlayout">
            <TextView
                android:id="@+id/tv_User_guestNumber"
                style="@style/user_notice_style"
                android:text="0"
                android:layout_marginTop="@dimen/user_letter_margintop"/>
            <TextView
               style="@style/user_notice_style"
                android:text="7天访客"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000000"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/user_notice_linearlayout">
            <ImageView
                android:src="@mipmap/star"
                style="@style/user_collect_image"/>
            <TextView
                style="@style/user_collect_style"
                android:text="收藏"/>
        </LinearLayout>


        <LinearLayout
            style="@style/user_notice_linearlayout">
            <ImageView
                android:src="@mipmap/history"
                style="@style/user_collect_image"/>
            <TextView
                android:text="历史"
                style="@style/user_collect_style"/>
        </LinearLayout>

        <LinearLayout
            style="@style/user_notice_linearlayout">
            <ImageView
                android:src="@mipmap/night"
                style="@style/user_collect_image"/>
            <TextView
                android:text="夜间"
                style="@style/user_collect_style"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c1c2c2"
        android:orientation="vertical">

        <LinearLayout
            style="@style/user_select_layoustyle"
            android:layout_marginTop="5dp">
            <TextView
               style="@style/user_select_textview"
                android:text="登录注册" />
            <ImageView
                style="@style/user_select_imageview"
                android:src="@mipmap/up" />
        </LinearLayout>


        <LinearLayout
            style="@style/user_select_layoustyle"
            android:layout_marginTop="10dp">
            <TextView
                style="@style/user_select_textview"
                android:text="手机号"
                />
            <ImageView
                style="@style/user_select_imageview"
                android:src="@mipmap/up"
                android:layout_marginStart="270dp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/user_select_layoustyle">
            <TextView
               style="@style/user_select_textview"
                android:text="用户名"
                />
            <ImageView
                style="@style/user_select_imageview"
                android:src="@mipmap/up"
                android:layout_marginStart="270dp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/user_select_layoustyle">
            <TextView
                style="@style/user_select_textview"
                android:text="系统设置"
                />

            <ImageView
                style="@style/user_select_imageview"
                android:src="@mipmap/up" />
        </LinearLayout>

        <LinearLayout
            style="@style/user_select_layoustyle"
            android:layout_marginTop="10dp">
            <TextView
                style="@style/user_select_textview"
                android:text="缓存清理" />
            <ImageView
                style="@style/user_select_imageview"
                android:src="@mipmap/up" />
        </LinearLayout>

        <LinearLayout
            style="@style/user_select_layoustyle">
            <TextView
                style="@style/user_select_textview"
                android:text="退出登录"
              />

            <ImageView
               style="@style/user_select_imageview"
                android:src="@mipmap/up"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
